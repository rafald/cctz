project cctz
        : usage-requirements <include>include
        : requirements <cxxflags>"-std=c++11 "
        : source-location src
        : build-dir bazel-boost-build
;

lib cctz : 
 time_zone_format.cc
 time_zone_if.cc
 time_zone_impl.cc
 time_zone_info.cc
