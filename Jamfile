project cctz
        : usage-requirements <include>include
        : requirements <cxxflags>"-std=c++11 "
        : source-location src
        : build-dir bazel-boost-build
;

lib cctz : 
 time_zone_format.cc
 time_zone_if.cc
 time_zone_impl.cc
 time_zone_info.cc
 time_zone_libc.cc
 time_zone_lookup.cc
 time_zone_posix.cc
 : 
 <include>include  
 <cxxflags>"-pthread " <linkflags>"-pthread " # NOTE: without this flag fails for gcc;ubuntu
;

# following target 'src' depends on googletest lib: expects predefined declarations /googlemock and /googletest
build-project src ; # this runs tests ; requires/depends on googletest lib

exe time_tool : time_tool.cc : <library>cctz/<link>static ;

build-project examples ;
