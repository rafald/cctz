 time_zone_lookup.cc
 time_zone_posix.cc
 : 
 <include>include  
 <threading>multi #NOTE: without multithreading enabled fails for gcc;ubuntu
;

build-project src ; # this runs tests which require googletest lib

exe time_tool : time_tool.cc : <library>cctz ;

build-project examples ;

